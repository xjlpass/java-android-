<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <!-- 改为 4 列 × 3 行（共 12 格，可放置 10 张图，末尾两格留白）-->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:rowCount="3"
        android:columnCount="4"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true">

        <!-- 第一行 -->
        <ImageView
            android:id="@+id/ivIcon0"
            android:layout_width="36dp"
            android:layout_height="14dp"
            android:src="@drawable/time_lane_type_back_1_night"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/ivIcon1"
            android:layout_width="36dp"
            android:layout_height="14dp"
            android:src="@drawable/time_lane_type_front_1_night"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/ivIcon2"
            android:layout_width="36dp"
            android:layout_height="14dp"
            android:src="@drawable/time_lane_type_front_2_night"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/ivIcon6"
            android:layout_width="36dp"
            android:layout_height="14dp"
            android:src="@drawable/time_lane_type_back_3_night"
            android:contentDescription="@string/app_name" />

        <!-- 第二行 -->
        <ImageView
            android:id="@+id/ivIcon3"
            android:layout_width="36dp"
            android:layout_height="14dp"
            android:src="@drawable/time_lane_type_back_2_night"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/ivIcon4"
            android:layout_width="36dp"
            android:layout_height="14dp"
            android:src="@drawable/time_lane_type_front_3_night"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/ivIcon5"
            android:layout_width="36dp"
            android:layout_height="14dp"
            android:src="@drawable/time_lane_type_back_4_night"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/ivIcon7"
            android:layout_width="36dp"
            android:layout_height="14dp"
            android:src="@drawable/time_lane_type_front_4_night"
            android:contentDescription="@string/app_name" />

        <!-- 第三行，新增两张图 -->
        <ImageView
            android:id="@+id/ivIcon8"
            android:layout_width="36dp"
            android:layout_height="14dp"
            android:src="@drawable/ab"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/ivIcon9"
            android:layout_width="144dp"
            android:layout_height="56dp"
            android:src="@drawable/cd"
            android:contentDescription="@string/app_name" />

        <!-- 最后两个单元格留空，或者添加占位 View -->
        <!--
        <View
            android:layout_width="36dp"
            android:layout_height="36dp" />

        <View
            android:layout_width="36dp"
            android:layout_height="36dp" />
        -->
    </GridLayout>
</FrameLayout>
